<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clRootLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/orange_flame"
    android:minWidth="120dp">

    <ImageView
        android:id="@+id/ivSortImage"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvSortTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_sort_asc" />

    <TextView
        android:id="@+id/tvSortTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:minWidth="120dp"
        android:textColor="@color/white_ghost"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/ivSortImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivSortImage"
        app:layout_constraintTop_toTopOf="@id/ivSortImage"
        tools:text="По названию" />

    <View
        android:id="@+id/vDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/white_ghost_50_opacity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvSortTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>

